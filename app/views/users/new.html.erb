<%= form_for(@user, url: signup_path) do |f| %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-white shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
    <div class="self-center mb-6 text-xl font-light text-center text-gray-600 sm:text-2xl dark:text-white">
            Create an Account
        </div>       
            <div class="mt-2">

                <div>
                    <label class="block" for="Name">Name<label>
                         <%= f.text_field :name, class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent',placeholder:"Name"%>
                </div>

                <div class="mt-3 flex-col mb-2 flex relative">
                    <label class="block" for="email">Email<label>
                         <%= f.email_field :email, class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent',placeholder:"Email address"%>
                </div>
                
                <div class="mt-3  flex-col mb-2 flex relative">
                    <label class="block">Password<label>
                            <%= f.password_field :password,class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent', placeholder:"Password"%>
                </div>
               
                <%# <span class="text-xs text-red-400">Password should be same!</span> %>
                
                <div class="flex mt-6">
                    <%= f.submit "Sign up", class:"py-2 px-4  bg-purple-600 hover:bg-purple-700 focus:ring-purple-500 focus:ring-offset-purple-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg" %>
                        
                </div>

                <div class="mt-5 text-grey-dark">
                Already have an account ?
                   <%= link_to "Log in", login_path, class: 'inline-flex items-center text-md font-thin text-center text-gray-500 hover:text-gray-700 dark:text-gray-100 dark:hover:text-white' %>
                </div>

            </div>
        </form>
    </div>
</div>
<% end %>